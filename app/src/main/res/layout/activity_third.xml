<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content" android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sitizahirahmkgmail.fashionfit.thirdActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MIX MATCH"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/datePicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <DatePicker
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/datePicker"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Occasions"
        android:id="@+id/textView3"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/datePicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casual"
            android:id="@+id/Casual"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formal"
            android:id="@+id/Formal"
            android:checked="false"
            android:layout_gravity="center_horizontal" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Party"
            android:id="@+id/Party"
            android:checked="false"
            android:layout_weight="0.34" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Top"
        android:id="@+id/textView4"
        android:layout_toLeftOf="@+id/radioGroup"
        android:layout_alignTop="@+id/spinner"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="15dp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/radioGroup"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="26dp"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:src="@drawable/converted"
        android:layout_marginLeft="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="46dp"
        />


    <ImageView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/spinner2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bottom2"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Shoes"
        android:id="@+id/textView6"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"  />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_below="@+id/imageView2"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginLeft="46dp"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:id="@+id/imageView3"
        android:src="@drawable/shoes2"
        android:layout_below="@+id/spinner4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Accessories"
            android:id="@+id/textView7"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentLeft="true"  />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner4"
            android:layout_below="@+id/imageView2"
            android:layout_toEndOf="@+id/textView6"
            android:layout_marginLeft="46dp"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:id="@+id/imageView4"
            android:src="@drawable/hat2"
            android:layout_below="@+id/spinner"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button"
        android:layout_below="@+id/imageView3"
        android:layout_toEndOf="@+id/s1"
        android:layout_marginLeft="160dp"
        android:onClick="submitB"/>
</LinearLayout>
</ScrollView>